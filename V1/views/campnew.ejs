<%- include ('partials/header'); -%>
<div class="container">
	<div>
		<h1 style="text-align: center; margin: 23px 0;">Create a New Book</h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/books" method="post" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" id="newBookForm" type="text" name="name" placeholder="Book Name" required/>
				</div>
				<div class="form-group">
					<input class="form-control" id="newBookForm" type="number" name="price" placeholder="Price" min="0.01" step="0.01" required/>
				</div>
				<div class="form-group">
					<label for="image" style="margin-bottom: 0px;">Image</label>
					<input class="form-control" style="margin-top: 10px;" id="newBookForm" type="file" id="image" name="image" accept="image/*" required>
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image Address" required/>
				</div> -->
				<div class="form-group">
					<input class="form-control" id="newBookForm" type="text" name="description" placeholder="Description" />
				</div>				
				<div class="form-group" style="padding-top: 15px;">
					<button class="btn btn-lg btn-primary btn-block">Submit!!!</button>
					<a href="/books">Go Back!!</a>
				</div>				
			</form>			
		</div>
	</div>
</div>
<%- include ('partials/footer'); -%>