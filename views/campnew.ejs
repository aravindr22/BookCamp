<%- include ('partials/header'); -%>
<div class="container">
	<div>
		<h1 style="text-align: center;">Create a New Book</h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/books" method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Book Name" required/>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01" required/>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image Address" required/>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="Description" />
				</div>				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!!!</button>
					<a href="/books">Go Back!!</a>
				</div>				
			</form>			
		</div>
	</div>
</div>
<%- include ('partials/footer'); -%>