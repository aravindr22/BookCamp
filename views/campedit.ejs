<%- include ('partials/header'); -%>
<div class="container">
	<div>
		<h1 style="text-align: center;">Edit <%= book.name %> </h1><br/>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/books/<%= book._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="book[name]" value="<%= book.name %>" required/>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="book[price]" value="<%= book.price %>" min="0.01" step="0.01" required/>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="book[image]" value="<%= book.image %>" required/>
				</div>
				<div class="form-group">
					<textarea class="form-control" name="book[description]"><%= book.description %></textarea>
				</div>				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!!!</button>
					<a href="/books">Go Back!!</a>
				</div>				
			</form>			
		</div>
	</div>
</div>
<%- include ('partials/footer'); -%>